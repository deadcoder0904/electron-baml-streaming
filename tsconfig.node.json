{
	"extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
	"include": [
		"electron.vite.config.*",
		"src/main/**/*",
		"src/preload/**/*",
		"baml_client/**/*",
		"src/types/**/*"
	],
	"compilerOptions": {
		"composite": true,
		"types": ["electron-vite/node"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"baseUrl": ".",
		"paths": {
			"*": ["./*"]
		}
	}
}
